{
  "name": "eindopdracht-bt",
  "private": true,
  "version": "1.0.0",
  "description": "Kahoot clone, omdat het kan",
  "scripts": {
    "lint": "stylelint src/**/*.css & xo",
    "build-js-index": "browserify src/index.js -t [ babelify --presets [ es2015 ] ] -p bundle-collapser/plugin | esmangle > public/index.js",
    "build-js-ffo": "browserify src/fontfaceobserver.js -t [ babelify --presets [ es2015 ] ] -p bundle-collapser/plugin | esmangle > public/fontfaceobserver.js",
    "build-css": "postcss src/*.css --use postcss-cssnext | csso -o public/style.css",
    "build": "npm run build-css && npm run build-js-index && npm run build-js-ffo",
    "dev-server": "nodemon server.js --watch lib --watch src --watch server.js",
    "dev-client": "nodemon -e css,js --watch src --exec \"npm run build\"",
    "start": "npm run lint && npm run build && node server.js"
  },
  "keywords": [],
  "author": "Rijk van Zanten <rijkvanzanten@me.com> (rijks.website)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "express-session": "^1.15.2",
    "leveldown": "^1.6.0",
    "levelup": "^1.3.5",
    "shortid": "^2.2.8",
    "socket.io": "^1.7.3",
    "uuid": "^3.0.1",
    "vdom-to-html": "^2.3.1",
    "virtual-dom": "^2.1.1"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "xo": {
    "space": true,
    "esnext": false
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "bundle-collapser": "^1.2.1",
    "csso-cli": "^1.0.0",
    "esmangle": "^1.0.1",
    "nodemon": "^1.11.0",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "postcss-cssnext": "^2.10.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "watchify": "^3.9.0",
    "xo": "^0.18.1"
  }
}
